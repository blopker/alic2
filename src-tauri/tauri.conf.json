{
  "$schema": "https://schema.tauri.app/config/2",
  "mainBinaryName": "Alic",
  "productName": "Alic Image Compressor",
  "version": "2.0.0",
  "identifier": "co.bollc.alic",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "acceptFirstMouse": true,
        "center": true,
        "fullscreen": false,
        "height": 370,
        "minHeight": 370,
        "minWidth": 600,
        "resizable": true,
        "title": "Alic Image Compressor",
        "width": 600
      },
      {
        "acceptFirstMouse": true,
        "create": false,
        "dragDropEnabled": false,
        "fullscreen": false,
        "height": 370,
        "label": "settings",
        "minHeight": 370,
        "minWidth": 600,
        "resizable": true,
        "title": "Alic Settings",
        "url": "index.html#/settings",
        "width": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "fileAssociations": [
      {
        "ext": ["jpg"]
      },
      {
        "ext": ["jpeg", "jpg"]
      },
      {
        "ext": ["png"]
      },
      {
        "ext": ["gif"]
      },
      {
        "ext": ["webp"]
      },
      {
        "ext": ["tiff"]
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "13"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["alic", "alicscheme"]
      }
    }
  }
}
